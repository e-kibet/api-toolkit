{
    "compilerOptions": {
        "target": "ES2022",
        "module": "CommonJS",
        "lib": [
            "ES2022"
        ],
        "outDir": "dist",
        "rootDir": ".",
        "declaration": true,
        "sourceMap": true,
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "moduleResolution": "node",
        "types": [
            "node",
            "express",
        ]
    },
    "include": [
        "adapters/**/*",
        "decorators/**/*",
        "helpers/**/*",
        "core/**/*",
        "cli/**/*",
        "types/global.d.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}